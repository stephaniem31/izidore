{% extends 'base.html.twig' %}

{% block title %}Le vide-appart de {{ appart.user.firstname }} à {{ appart.city }} | izidore {% endblock %}

{% block body %}
	<div class="media vide-appt" style="background-image: url('{{asset(appart.picture)}}');">
		<div class="ps-5 pt-5 d-flex media-body">
			<a href="{{ path('appartment_index') }}" title="Retour à la liste des appartements">
				<i class="fas fa-arrow-circle-left text-white h1"></i>
			</a>

			<h1 class="ms-2 text-uppercase text-white fw-bold h2">
				Bienvenue chez {{ appart.user.firstname }}
			</h1>
		</div>
	</div>

	<div class="row">
		<div class="mt-n5 ps-4 col-12 col-lg-3">
			{% include 'components/_card_info_user.html.twig' %}
		</div>

		<div class="col-12 col-lg-9">
			<div class="row">
        		{% for product in products %}
					<div class="col-12 col-md-6 col-lg-4 col-xxl-3">
          				{% include 'components/_card_product.html.twig' %}
					</div>
        		{% else %}
          			{{ appart.user.name }} n'a rien à vendre pour le moment.
				{% endfor %}
      		</div>
		</div>
	</div>
{% endblock %}


